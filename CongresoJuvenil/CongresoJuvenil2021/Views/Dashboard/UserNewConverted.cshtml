@model IEnumerable<CongresoJuvenil2021.Models.AppUser>


@{
    ViewData["Title"] = "Usuarios Nuevos Convertidos";
}
<div class="row">
    <div class="col-12">
        <div class="row">
            @foreach (var item in (List<CongresoJuvenil2021.ViewModels.TeamCongregation>)ViewBag.resultTotals)
            {
                <div class="col-md-3 col-xs-6">
                    <div class="alert alert-primary" role="alert">
                        Equipo N° @item.TeamId <b>Total Nuevos Convertidos: @item.TotalUser</b>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-12 mb-3">
        <h3>Usuarios Nuevos Convertidos</h3>
        <a class="btn btn-info" asp-area="" asp-controller="Dashboard" asp-action="ExporExcelNewConverted" asp-route-id="">Exportar Excel</a>
    </div>
    <div class="col-12">

        <table id="tblExport" class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CongregationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeamId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instagram)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Facebook)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TikTok)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Twitter)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CongregationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instagram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Facebook)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TikTok)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Twitter)
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <h4>Total</h4>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <h4>
                            @ViewBag.Count
                        </h4>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>